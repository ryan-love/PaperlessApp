<!DOCTYPE html>
<html>
  <head>
    <title><%=  %></title>
    <link rel='stylesheet' href='/stylesheets/style.css' />
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">
  </head>
  <body onbeforeprint="removePage()" onafterprint="showPage()">
  <nav class="navbar navbar-expand-md navbar-dark bg-dark">
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#billNav" aria-controls="billNav" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="billNav">
      <ul class="navbar-nav mr-auto">
        <li class="nav-item"><a class="nav-link" href="/">Home <%= bal.id %></a></li>
        <li class="nav-item"> <div id="profile"  class="nav-link" style=".nav-link:hover{color: rgba(255,255,255,.5);}"></div></li>
      </ul>
      <form action="/users/logout" method="get" class="form-inline my-2 my-md-0 float-right">
        <button class="btn btn-light" type="submit">logout</button>
      </form>


    </div>

  </nav>
  <div class="container">
    <div class="row">
      <div class="card col-md-12">
    <h1 class="text-center">Billing: Order ID: <%= id %></h1>
        <table class="table">
          <thead>
          <tr>
            <th scope="col">Item</th>
            <th scope="col">Quantity</th>
            <th scope="col">Price</th>
          </tr>
          </thead>


          <tbody>
          <tr>
            <th scope="row">
                <%= order.bill_id%>
             </th>
            <td> <%= order.time_complete %></td>
            <td> <%= order.total %></td>
          </tr>
          <tr>


          <tr scope="row">
            <td class="col-xs">

                <div class="col-xs-2">
              <button class="btn-lg btn-primary"  onclick="display();" id="addButton">Add Discounts</button>
              <input class="form-control input-sm " onkeyup="document.getElementById('addDiscounts').value = this.value " type="text" id="addDiscount" name="addDiscount"/>
                </div>

            </td>
            <td></td>
            <td> <table width="100%">
                <tbody>
                <tr>
                  <th scope="row">
                    Inc VAT:
                  </th>
                  <td>75.65</td>
                </tr>
                <tr>
                  <th scope="row">
                    Excl VAT:
                  </th>
                  <td>£72.00</td>
                </tr>
                <tr>
                  <th scope="row">
                    Tips:
                  </th>
                  <td>£5.00</td>
                </tr>
                <tr>
                  <th scope="row">
                    Total Price:
                  </th>
                  <td>£80.65</td>
                </tr>

                </tbody>

              </table></td>
          </tr>


          </tbody>
        </table>



        <div class="row">
          <div class="mx-5">
          <h3>Server: Jane Doe</h3>
            <button id="print" onclick="window.print();" class="btn-primary btn-lg">Print</button>
          </div>
        </div>

        <div class="row mx-auto">

          <form action="/billing/charge" method="post">
            <input type="hidden" value="<%= order.order_id%>" name="orderID">
            <input type="text" value="" id="addDiscounts" name="addDiscounts">
            <script class="stripe-button" src="//checkout.stripe.com/v2/checkout.js" data-locale="auto" data-key=<%= keyPublishable %> data-description="<%= order.order_id %>" data-amount="<%= order.total %>">
            </script>
            <script>
              document.getElementsByClassName("stripe-button-el")[0].style.display = 'none';
              if (document.getElementById("addDiscount").value === "6UsM3uUv"){
                document.getElementById("addDiscounts").value = "6UsM3uUv"
              }
            </script>
            <button class="btn-lg btn-primary" id="payNow" >Pay Now</button>
          </form>
        </div>
        <br>




      </div>
    </div>

    <script>
      function display() {
        const addDiscounts = document.getElementById("addDiscount");
        if (addDiscounts.style.display === "inline") {
          addDiscounts.style.display = "none"
        }
        else {
          addDiscounts.style.display = "inline"
        }
        return false
      }



      function removePage() {
        const addDiscounts = document.getElementById("addButton");
        const payNow = document.getElementById("payNow")
        const print = document.getElementById("print")

          addDiscounts.style.display = "none"
          payNow.style.display = "none"
          print.style.display = "none"



      }

      function showPage() {
        const addDiscounts = document.getElementById("addButton");
        const payNow = document.getElementById("payNow")
        const print = document.getElementById("print")

        addDiscounts.style.display = "inline"
        payNow.style.display = "inline"
        print.style.display = "inline"

      }

    </script>
    <script src="https://code.jquery.com/jquery-3.4.1.slim.min.js" integrity="sha384-J6qa4849blE2+poT4WnyKhv5vZF5SrPo0iEjwBvKU7imGFAV0wwj1yYfoRSJoZ+n" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js" integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js" integrity="sha384-wfSDF2E50Y2D1uUdj0O3uMBJnjuUD4Ih7YwaYd1iqfktj0Uod8GCExl3Og8ifwB6" crossorigin="anonymous"></script>
  </div>
  </body>
</html>
